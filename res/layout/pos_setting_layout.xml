                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:src="@drawable/ic_template_sms"/>

                </LinearLayout>

                <TextView
                    android:id="@+id/setting_invoice_prefix_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/setting_edit_text_square"
                    android:gravity="start"
                    android:padding="2dp"
                    android:textSize="10sp"
                    android:visibility="visible" />

                <EditText
                    android:id="@+id/setting_invoice_prefix"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/setting_edit_text_square"
                    android:gravity="start"
                    android:hint="Invoice Prefix*"
                    android:maxLength="@integer/edit_view_length"
                    android:minHeight="30dp"
                    android:padding="5dp"
                    android:paddingBottom="2dp"
                    android:paddingLeft="10dp"
                    android:stretchColumns="5"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/setting_order_prefix_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/setting_edit_text_square"
                    android:gravity="start"
                    android:padding="2dp"
                    android:text=""
                    android:textSize="10sp" />

                <EditText
                    android:id="@+id/setting_order_prefix"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/setting_edit_text_square"
                    android:gravity="start"
                    android:hint="Order Prefix*"
                    android:maxLength="@integer/edit_view_length"
                    android:minHeight="30dp"
                    android:padding="5dp"
                    android:paddingBottom="2dp"
                    android:paddingLeft="10dp"
                    android:stretchColumns="5"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/setting_invoice_number_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/setting_edit_text_square"
                    android:gravity="start"
                    android:padding="2dp"
                    android:text=""
                    android:textSize="10sp"
                    android:visibility="visible" />

                <EditText
                    android:id="@+id/setting_invoice_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/setting_edit_text_square"
                    android:gravity="start"
                    android:hint="Invoice No. Start*"
                    android:maxLength="@integer/edit_view_length"
                    android:minHeight="30dp"
                    android:padding="5dp"
                    android:paddingBottom="2dp"
                    android:paddingLeft="10dp"
                    android:stretchColumns="5"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/setting_receipt_number_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/setting_edit_text_square"
                    android:gravity="start"
                    android:padding="2dp"
                    android:text=""
                    android:textSize="10sp"
                    android:visibility="visible" />

                <EditText
                    android:id="@+id/setting_receipt_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/setting_edit_text_square"
                    android:gravity="start"
                    android:hint="Receipt No. Start*"
                    android:maxLength="@integer/edit_view_length"
                    android:minHeight="30dp"
                    android:padding="5dp"
                    android:paddingBottom="2dp"
                    android:paddingLeft="10dp"
                    android:stretchColumns="5"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/setting_pan_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/setting_edit_text_square"
                    android:gravity="start"
                    android:padding="2dp"
                    android:text=""
                    android:textSize="10sp"
                    android:visibility="visible" />

                <EditText
                    android:id="@+id/setting_pan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/setting_edit_text_square"
                    android:gravity="start"
                    android:hint="PAN No."
                    android:maxLength="@integer/edit_view_length"
