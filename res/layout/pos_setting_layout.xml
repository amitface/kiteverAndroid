                <ImageView
                    android:id="@+id/payment_gate_icon"
                    android:layout_width="20dip"
                    android:layout_height="20dip"
                    android:layout_marginStart="12dp"
                    android:src="@drawable/modeof_payment"
                    android:layout_alignBottom="@+id/setting_gateway_title"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />


            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/list_divider_color" />

            <LinearLayout
                android:id="@+id/payment_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:elevation="5dp"
                android:background="@drawable/border_black"
                android:padding="5dp"
                android:visibility="gone"
                android:layout_margin="10dp">
                <Spinner
                    android:id="@+id/payment_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:entries="@array/payment_gateway">

                </Spinner>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp">
                    <TextView
                        android:id="@+id/payment_key_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Key : "/>
                    <EditText
                        android:id="@+id/payment_key"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="4dp"
                        android:background="@drawable/editbox_bottom"/>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp">
                    <TextView
                        android:id="@+id/payment_salt_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Salt :"/>
                    <EditText
                        android:id="@+id/payment_salt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="4dp"
                        android:background="@drawable/editbox_bottom"/>


                </LinearLayout>


                <Button
                    android:id="@+id/payment_save"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Save"
                    android:background="@color/actionbar_background"
                    android:textColor="#ffffff"
                    android:padding="4dp"
                    android:layout_margin="10dp"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:id="@+id/link_layout"

                    >
                    <TextView
                        android:id="@+id/mtextview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Test link"/>
                    <TextView
                        android:id="@+id/payment_link"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:hint="test link"
                        android:padding="4dp"
                        android:background="@drawable/editbox_bottom"/>

                </LinearLayout>

                <Switch
                    android:id="@+id/payment_activation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:visibility="gone"
                    android:text="Activate Payment Gateway"/>




            </LinearLayout>

            <RelativeLayout
                android:id="@+id/taxes_layout"
                android:layout_width="match_parent"
                android:layout_height="40dp">

                <TextView
                    android:id="@+id/setting_tax_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@+id/setting_tax_icon"
                    android:text="Taxes "
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/setting_tax_icon"
                    android:layout_width="20dip"
                    android:layout_height="20dip"
                    android:layout_marginStart="12dp"
                    android:src="@drawable/tax"
                    android:layout_alignBottom="@+id/setting_tax_title"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />


            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/list_divider_color" />

            <RelativeLayout
                android:id="@+id/other_charges_layout"
                android:layout_width="match_parent"
                android:layout_height="40dp">

                <TextView
                    android:id="@+id/other_charges_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@+id/other_charges_icon"
                    android:text="Other Charges "
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/other_charges_icon"
                    android:layout_width="20dip"
                    android:layout_height="20dip"
                    android:layout_marginStart="12dp"
                    android:src="@drawable/chrg"
                    android:layout_alignBottom="@+id/other_charges_title"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />


            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/list_divider_color" />
        </LinearLayout>


    </ScrollView>


