                    android:gravity="start"
                    android:padding="2dp"
                    android:textSize="10sp"
                    android:visibility="visible" />

                <EditText
                    android:id="@+id/setting_tin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/setting_edit_text_square"
                    android:gravity="start"
                    android:hint="Tin"
                    android:maxLength="@integer/edit_view_length"
                    android:minHeight="30dp"
                    android:padding="5dp"
                    android:paddingBottom="2dp"
                    android:paddingLeft="10dp"
                    android:stretchColumns="5"
                    android:textSize="14sp" />



                <TextView
                    android:id="@+id/setting_service_tax_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/setting_edit_text_square"
                    android:gravity="start"
                    android:padding="2dp"
                    android:textSize="10sp"
                    android:visibility="visible" />

                <EditText
                    android:id="@+id/setting_service_tax"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/setting_edit_text_square"
                    android:gravity="start"
                    android:hint="Service Tax No."
                    android:maxLength="@integer/edit_view_length"
                    android:minHeight="30dp"
                    android:padding="5dp"
                    android:paddingBottom="2dp"
                    android:paddingLeft="10dp"
                    android:stretchColumns="5"
                    android:textSize="14sp" />




                <TextView
                    android:id="@+id/setting_gst_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/setting_edit_text_square"
                    android:gravity="start"
                    android:padding="2dp"
                    android:text=""
                    android:textSize="10sp" />

                <EditText
                    android:id="@+id/setting_gst"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/setting_edit_text_square"
                    android:enabled="false"
                    android:gravity="start"
                    android:hint="GST (coming soon)"
                    android:maxLength="@integer/edit_view_length"
                    android:minHeight="30dp"
                    android:padding="5dp"
                    android:paddingBottom="2dp"
                    android:paddingLeft="10dp"
                    android:stretchColumns="5"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/invoice_radio_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="2dp"
                    android:layout_marginTop="15dp"
                    android:gravity="end"
                    android:text="Product price includes tax" />

                <RadioGroup
                    android:id="@+id/radioGroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/radio_yes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Yes" />

                    <RadioButton
                        android:id="@+id/radio_no"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="No" />
                </RadioGroup>

                <TextView
                    android:id="@+id/note_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="2dp"
                    android:layout_marginTop="15dp"
                    android:gravity="start"
                    android:text="*Cannot be edited, once an order is generateds" />

                <Button
                    android:id="@+id/submit_setting"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:padding="5dp"
                    android:text="Save Settings" />

            </LinearLayout>
            <!-- Invoice Content Ends Here-->

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/list_divider_color" />
            <!-- Alert Settings Header -->
            <RelativeLayout
                android:id="@+id/alert_layout"
                android:layout_width="match_parent"
                android:layout_height="40dp">

                <ImageView
                    android:id="@+id/alert_icon"
                    android:layout_width="20dip"
                    android:layout_height="20dip"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/alert1" />

                <TextView
                    android:id="@+id/setting_alert_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@+id/alert_icon"
                    android:text="Alert Settings"
                    android:textSize="16sp"
                    android:textStyle="bold" />


            </RelativeLayout>



            <!--Alert Settings Content -->

            <LinearLayout
                android:id="@+id/alert_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="5dp"
                android:layout_margin="10dp"
                android:elevation="5dp"
                android:background="@drawable/border_black"
                android:visibility="gone">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_margin="2dp"
                    android:orientation="horizontal"
                    android:padding="5dp"
                    android:weightSum="1">

                    <TextView
                        android:id="@+id/alert_order"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|left"
                        android:layout_weight=".6"
                        android:text="Order"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/sms_invoice"
                        style="@style/Sms_Icon_Style"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".2" />

                    <TextView
                        android:id="@+id/mail_invoice"
                        style="@style/Mail_Icon_Style"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".2" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_margin="2dp"
                    android:background="@color/list_divider_color" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_margin="2dp"
                    android:orientation="horizontal"
                    android:padding="3dp"
                    android:weightSum="1">

                    <TextView
                        android:id="@+id/alert_payment"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|left"
                        android:layout_weight=".6"
                        android:text="Payment"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/sms_payment"
                        style="@style/Sms_Icon_Style"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".2" />

                    <TextView
                        android:id="@+id/mail_payment"
                        style="@style/Mail_Icon_Style"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".2" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_margin="2dp"
                    android:background="@color/list_divider_color" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_margin="2dp"
                    android:orientation="horizontal"
                    android:padding="3dp"
                    android:weightSum="1">

                    <TextView
                        android:id="@+id/alert_credit"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|left"
                        android:layout_weight=".6"
                        android:text="Credit"

                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/sms_credit"
                        style="@style/Sms_Icon_Style"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".2" />

                    <TextView
                        android:id="@+id/mail_credit"
                        style="@style/Mail_Icon_Style"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".2" />

