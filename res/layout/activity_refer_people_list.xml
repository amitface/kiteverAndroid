<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
 
    android:layout_gravity="center"
    tools:context="sms19.listview.newproject.ReferPeopleList" >

   <LinearLayout
       android:id="@+id/linear1"
       android:layout_width="fill_parent"
       android:layout_height="40dp"
      android:gravity="center"
       android:layout_alignParentTop="true"
       android:orientation="horizontal" >

       <TextView
           android:layout_width="wrap_content"
           android:layout_height="39dp"
           android:layout_gravity="center"
           android:layout_weight="0.17"
           android:background="#ffffff"
           android:gravity="center"
           android:paddingLeft="5dp"
           android:text="Referred Friends"
           android:textColor="#000000"
           android:textSize="18sp"
           android:textStyle="bold" />

       <TextView
           android:layout_width="wrap_content"
           android:layout_height="39dp"
           android:layout_gravity="center"
           android:layout_weight="0.20"
           android:background="#C0C0C0"
           android:id="@+id/rfrdform"
           android:gravity="center"
           android:textSize="18sp"
           android:text="Refer Friends"
           android:textColor="#000000"
           android:textStyle="bold" />

   </LinearLayout>

     <LinearLayout 
        android:layout_height="50dp"
        android:layout_width="fill_parent"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:gravity="center"
        android:id="@+id/rowdata"
         android:background="#0867A3"
        android:layout_margin="2dp"
        android:layout_below="@+id/linear1"
        >

        <TextView
            android:id="@+id/textreferListName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_weight="1"
            android:textSize="18sp"
            android:textStyle="bold"
            android:text="Date"
            android:textColor="#ffffff" />

        <TextView
            android:id="@+id/textreferListNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
               android:gravity="center"
                 android:textStyle="bold"
            android:layout_weight="1"
            android:textSize="18sp"
            android:text="Name"
            android:textColor="#ffffff" />

        <TextView
            android:id="@+id/textreferListStatus"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
             android:gravity="center"
               android:textStyle="bold"
            android:layout_weight="1"
            android:textColor="#ffffff"
            android:layout_height="wrap_content"
           android:textSize="18sp"
            android:text="Mobile" />

        <TextView
            android:id="@+id/textreferListDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
              android:gravity="center"
              android:textSize="18sp"
            android:layout_weight="1"
              android:textStyle="bold"
            android:text="Status"
            android:textColor="#ffffff" />

    </LinearLayout>
    
    <ListView
        android:id="@+id/listReferdes"
        android:layout_width="fill_parent"
         android:textColor="#000000"
         android:divider="@drawable/dividerlist"
         android:dividerHeight="3dp"
        android:layout_height="fill_parent"
       android:layout_below="@+id/rowdata" >

    </ListView>

</RelativeLayout>
