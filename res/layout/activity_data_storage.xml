<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_data_storage"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="sms19.listview.newproject.DataStorage">

    <TextView
        android:id="@+id/storage_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="55dp"
        android:layout_alignParentTop="true"
        android:text="Your total space"
        android:layout_margin="0dp"
        android:padding="10dp"
        android:gravity="center"
        android:background="@drawable/editbox_bottom"
        android:textStyle="bold" />

    <ListView
        android:id="@+id/storage_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/listview_background"
        android:padding="8dp"
        android:divider="@null"
        android:dividerHeight="4dp"
        android:clipToPadding="false"
        android:layout_below="@+id/storage_title"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ProgressBar

        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:visibility="gone"
        android:id="@+id/progressBar" />

    <RelativeLayout
        android:id="@+id/tax_emptyElement"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/storage_title"
        android:layout_alignParentLeft="true"
        android:visibility="gone">

        <TextView
            android:id="@+id/no_record"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/no_record"
            android:textSize="36sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/no_record_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/no_record"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:divider="@null"
            android:dividerHeight="4dp"
            android:text="@string/no_record_txt"
            android:textSize="15sp"
            android:textStyle="bold" />
    </RelativeLayout>


</RelativeLayout>
