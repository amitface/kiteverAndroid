<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffffff" >

        <FrameLayout
            android:id="@+id/title_layout"
            android:layout_width="match_parent"
            android:layout_height="45dp" >

            <LinearLayout
                android:id="@+id/tab_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/chat_action_bar_bg"
                android:orientation="horizontal"
                android:weightSum="3" >

                <TextView
                    android:id="@+id/tab_chat"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/chat"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/chat_text_size" />

                <TextView
                    android:id="@+id/tab_contact"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/contact2"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/chat_text_size" />

                <TextView
                    android:id="@+id/tab_groups"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Groups"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/chat_text_size" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_gravity="bottom"
                android:orientation="horizontal"
                android:weightSum="3" >

                <TextView
                    android:id="@+id/tab_chat_1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/new_actionbar_background_strip"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tab_contact_1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/chat_action_bar_bg"
                    android:textStyle="bold"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/tab_group_1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/chat_action_bar_bg"
                    android:textStyle="bold"
                    android:visibility="visible" />
            </LinearLayout>
        </FrameLayout>
    </RelativeLayout>

</LinearLayout>