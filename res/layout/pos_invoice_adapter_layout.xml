<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/page_adapter_layout"
    android:elevation="5dp"
    android:gravity="center"
    android:minHeight="60dp"
    android:orientation="horizontal"
    android:padding="5dp"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight=".20"
        android:background="@drawable/edit_text_background"
        android:orientation="vertical"
        android:padding="2dp">

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="2dp"
            android:text="Date"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="2dp"
            android:text="Date" />
    </LinearLayout>

    <TextView
        android:id="@+id/invoice_client_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight=".20"
        android:text="Name"
        android:paddingLeft="4dp"
        android:gravity="center" />

    <TextView
        android:id="@+id/invoice_number"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight=".20"
        android:text="Invoice"
        android:paddingLeft="2dp"
        android:gravity="center" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight=".40"
        android:paddingLeft="2dp"
        android:gravity="right"
        android:orientation="vertical">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TableRow android:gravity="right">
            <TextView
                android:id="@+id/invoice_billamount_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Amount"
                android:textSize="12sp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" : "
                android:textSize="12sp"
                />
            <TextView
                android:id="@+id/invoice_billamount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="00"
                android:textSize="12sp"
                android:gravity="right" />
        </TableRow>
        <TableRow android:gravity="right">

            <TextView
                android:id="@+id/invoice_amount_paid_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Paid"
                android:textSize="12sp"
                 />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" : "
                android:textSize="12sp"
                />

            <TextView
                android:id="@+id/invoice_amount_paid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="000"
                android:textSize="12sp"
                android:gravity="right" />
        </TableRow>
        <TableRow android:gravity="right">
            <TextView
                android:id="@+id/invoice_balance_amount_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Balance"
                android:textSize="12sp"
                 />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" : "
                android:textSize="12sp"
                />

            <TextView
                android:id="@+id/invoice_balance_amount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="000"
                android:textSize="12sp"
                android:gravity="right" />
        </TableRow>
    </TableLayout>







    </LinearLayout>
</LinearLayout>