<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
      <TextView
        android:id="@+id/other_charge_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:padding="7dp"     
        android:textColor="#fff"
        android:background="#01A89E"
        android:text="Select Other Charges" />

    <TextView
        android:id="@+id/donetxt"
        android:text="@string/done_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#fff"
        android:textStyle="bold"
        android:background="#01A89E"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textSize="24sp"
        android:layout_alignBaseline="@+id/other_charge_title"
        android:layout_alignBottom="@+id/other_charge_title"
        android:layout_alignParentRight="true"
        />
      


    <ListView
        android:id="@+id/othercharge_list_view"
        android:layout_width="match_parent"
          android:layout_below="@+id/other_charge_title"
        android:layout_height="260dip"
         android:layout_marginBottom="10dp"
        android:layout_marginTop="5dp" >
    </ListView>


    <TextView
        android:id="@+id/add_other_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:padding="10dp"
        android:gravity="center"
        android:textColor="#fff"
        android:textStyle="bold"
        android:background="#5D8AA8"
        android:layout_below="@+id/othercharge_list_view"
        android:text="+ Add New " />


    <!--  <Button
         android:id="@+id/other_done"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_below="@+id/othercharge_list_view"
         android:layout_alignParentLeft="true"
         android:layout_margin="10dp"
         android:background="#01A89E"
         android:text="Done"
         android:textColor="#FFF" />-->

   

</RelativeLayout>
