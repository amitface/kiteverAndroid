<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/school"
    android:orientation="vertical" >

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/contactbook"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:text="Phone Book" />

        <Button
            android:id="@+id/sms19"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/button6"
            android:layout_alignParentTop="true"
            android:text="Sms19  Contact" />
    </TableRow>

    <CheckBox
        android:id="@+id/checkBox1Friends"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sms19"
        android:layout_marginTop="14dp"
        android:text="Select All" />

    <ListView
        android:id="@+id/listView1"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_above="@+id/inviteall"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/checkBox1Friends"
        android:layout_weight="0.84" >
    </ListView>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/inviteall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
          
            android:background="@drawable/backgroundbtn"
            android:text="Invite All"
            android:layout_weight="1"
            android:textColor="#FFFFFF"
            android:textSize="12sp" />

        <Button
            android:id="@+id/invitedpeople"
            android:layout_width="wrap_content"
            android:background="#FFFFFF"
              android:textSize="12sp"
            android:layout_height="wrap_content"
             android:layout_weight="1"
            android:text="Invited People" />

        <Button
            android:id="@+id/button6"
            android:layout_width="wrap_content"
              android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@drawable/backgroundbtn"
            android:text="Invite Selected"
            android:textColor="#FFFFFF"
            android:textSize="12sp" />

    </TableRow>

</LinearLayout>