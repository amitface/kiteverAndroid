<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="sms19.listview.newproject.Service_Loading_Page" >

    <ImageView
        android:id="@+id/sms"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:src="@drawable/splashicon" />

    <ImageView
        android:id="@+id/imageAnimation"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_above="@+id/sms"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="28dp"
        android:adjustViewBounds="true"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/textPleaseWait"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sms"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="82dp"
        android:text="Please wait..."
        android:textColor="#000000"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/websiteurl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/merchantname"
        android:layout_below="@+id/merchantname"
        android:text="Merchant Website"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/merchantname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/sms"
        android:layout_below="@+id/sms"
        android:layout_marginTop="20dp"
        android:text="Merchant Name"
        android:visibility="invisible" />

</RelativeLayout>