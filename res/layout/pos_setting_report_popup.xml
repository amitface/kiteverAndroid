<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dip"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#006955"
        android:id="@+id/report_title_layout"
        android:padding="5dp">

        <TextView
            android:id="@+id/pos_report_clock"
            style="@style/Icon_Style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="5dp"
            android:gravity="center"
            android:padding="5dp"
            android:text="@string/clock_icon" />

        <TextView
            android:id="@+id/pos_payment_date_range"
            style="@style/Icon_Style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/pos_report_clock"
            android:padding="5dp"
            android:text="How Often ?"
            android:visibility="gone" />

        <TextView
            android:id="@+id/report_done"
            style="@style/Icon_Style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:padding="5dp"
            android:text="@string/check_icon" />

    </RelativeLayout>


    <LinearLayout
        android:id="@+id/pos_order_date_range_layout"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <Switch
            android:id="@+id/report_sms1"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@color/white"
            android:padding="10dp"
            android:text="Daily"
            android:textSize="12sp" />

        <Switch
            android:id="@+id/report_sms2"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@color/white"
            android:padding="10dp"
            android:text="Weekly"
            android:textSize="12sp" />

        <Switch
            android:id="@+id/report_sms3"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@color/white"
            android:padding="10dp"
            android:text="Monthly"
            android:textSize="12sp" />

        <Switch
            android:id="@+id/report_sms4"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@color/white"
            android:padding="10dp"
            android:text="Quaterly"
            android:textSize="12sp" />


        <Switch
            android:id="@+id/report_sms5"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@color/white"
            android:padding="10dp"
            android:text="Half Yearly"
            android:textSize="12sp" />


        <Switch
            android:id="@+id/report_sms6"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@color/white"
            android:padding="10dp"
            android:text="Yearly"
            android:textSize="12sp" />

    </LinearLayout>
</LinearLayout>
