<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"    
    android:orientation="vertical"
    android:weightSum="1"
    android:padding="5dp"
    tools:context=".POSInvoicePdfViewer" >

    <WebView
        android:id="@+id/pos_invoice_pdf"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
         />

     <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0"
            android:layout_marginTop="3dp"
            android:orientation="horizontal"
            android:weightSum="1.5" >

            <ImageView 
                android:id="@+id/invoice_image_sms"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".1"
               
                android:layout_gravity="center_vertical"
                android:src="@drawable/checkbox_settings"/>
            <TextView 
                android:layout_width="0dp"
                android:layout_height="wrap_content"
				android:layout_weight=".2"
				android:text="Sms"
				
				android:layout_gravity="center_vertical"
				android:layout_marginRight="2dp"
               />
            
            <ImageView 
                android:id="@+id/invoice_image_mail"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".1"
                
                android:layout_gravity="center_vertical"
                android:src="@drawable/checkbox_settings"/>
            <TextView 
                android:layout_width="0dp"
                android:layout_height="wrap_content"
				android:layout_weight=".2"
				android:text="Mail"
				
				android:layout_gravity="center_vertical"
				android:layout_marginRight="2dp"
               />
            
            <ImageView 
                android:id="@+id/invoice_image_print"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".1"
                
                android:layout_gravity="center_vertical"
                android:src="@drawable/checkbox_settings"/>
            <TextView 
                android:layout_width="0dp"
                android:layout_height="wrap_content"
				android:layout_weight=".2"
				android:text="Print"
				
				android:layout_gravity="center_vertical"
				android:layout_marginRight="2dp"
               />
            <Button
                android:id="@+id/invoice_button_send"
                android:layout_width="0dp"
                android:layout_height="30dp" 
                android:textSize="14sp"               
				android:layout_weight=".3"
				android:layout_gravity="center"
				android:gravity="center"
				android:background="@drawable/block_user"
				android:textColor="#FFFFFF"
				android:text="Ok"
                />
                
           
            
        </LinearLayout>
</LinearLayout>
