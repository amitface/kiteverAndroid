<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
 
    android:layout_height="match_parent"
    android:id="@+id/linreadlist"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/imageProfileAdapter"
        android:layout_width="40dp"
        android:layout_gravity="center"
        android:layout_height="40dp"
        android:padding="5dp"
       android:background="@drawable/profilepicbackground"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="5dp"
        android:src="@drawable/user" />
        
    <LinearLayout
        android:id="@+id/Lineboth"
        android:layout_width="229dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
    
    <LinearLayout 
        android:id="@+id/LineReadInbox"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="3dp"
      android:layout_gravity="center"
        android:layout_width="fill_parent">
        
    <TextView
        android:id="@+id/inboxName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:gravity="center"
         android:layout_gravity="center"
        android:textSize="20dp"
        android:text="Name" />
    
      <TextView
        android:id="@+id/inboxTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textSize="10sp"
         android:layout_gravity="center"
        android:gravity="right"
        android:text="yyyy-mm-dd,hh:mm:ss" />
        
        
 </LinearLayout>

    <LinearLayout 
        android:id="@+id/LineReadInbox1"
        android:layout_height="wrap_content"
    
     
        android:layout_width="fill_parent">
        
    <TextView
        android:id="@+id/inboxRecipentMsg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:gravity="center"
        android:layout_gravity="center"
        android:text="Receipent Message............" />

    <TextView
        android:id="@+id/textTotalCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
         android:layout_gravity="center"
        android:layout_weight="1"
        android:textSize="12sp"
        android:gravity="right"
        android:text="" />
        
 </LinearLayout>
    
    </LinearLayout>
    
    <ImageView
        android:id="@+id/imageInboxListDelete"
        android:layout_width="40dp"
         android:layout_gravity="center"
        android:layout_height="30dp"
        android:src="@drawable/delete" />
    
</LinearLayout>
