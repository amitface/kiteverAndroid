<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEEAE4"
    android:clickable="true"
    android:orientation="vertical"
    android:padding="20dp" >

    <TextView
        android:id="@+id/textinvitecount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:text="You are about to send and invite to 52 contacts"
        android:textColor="#197C79" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="vertical"
        android:layout_marginTop="25dp"
        android:padding="20dp" >

        <TextView
            android:id="@+id/edt_groupname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            
            android:text="Hi Dear,"
            android:textColor="#E46C22" />
        
        
        
        <TextView
            android:id="@+id/des"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="I am using KIT app to keep in touch with friends join me"
            android:textColor="#000" />
        
        
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/invite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginRight="5dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/create_bg"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="Invite"
            android:textColor="#fff" />

        <Button
            android:id="@+id/cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/cancel_bg"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="Cancel"
            android:textColor="#fff" />
    </LinearLayout>

</LinearLayout>