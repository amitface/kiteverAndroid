<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_gravity="center"
    android:layout_height="match_parent" >

    <ImageView 
        android:id="@+id/imgforgotpass"
        android:layout_width="wrap_content"
        android:layout_height="120dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/ic_forgot_pass_new"
        />

    <EditText
        android:id="@+id/editOldPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp" 
        android:layout_below="@+id/imgforgotpass"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:background="@drawable/simple_edit_text"
        android:ems="10"
        android:gravity="center_vertical"
        android:hint="Old Password"
       android:inputType="textPassword"
        android:textColor="#000000" >
        <requestFocus />
        
    </EditText>


    <EditText
        android:id="@+id/editNewPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_alignLeft="@+id/editOldPassword"
        android:layout_below="@+id/editOldPassword"
        android:layout_marginTop="30dp"
        android:background="@drawable/simple_edit_text"
        android:ems="10"
        android:gravity="center_vertical"
        android:layout_centerHorizontal="true"
        android:inputType="textPassword"
        android:hint="New Password"
        android:textColor="#000000" >

    </EditText>

    <EditText
        android:id="@+id/editConfirmPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_alignLeft="@+id/editNewPassword"
        android:layout_below="@+id/editNewPassword"
        android:layout_marginTop="30dp"
        android:background="@drawable/simple_edit_text"
        android:ems="10"
        android:gravity="center_vertical"
        android:inputType="textPassword"
        android:hint="Confirm Password"
        android:textColor="#000000" >
    </EditText>

    <Button
        android:id="@+id/btnchangepassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@color/theme_primary_color"
        android:text="Update"
        android:textColor="#ffffff" />

</RelativeLayout>
