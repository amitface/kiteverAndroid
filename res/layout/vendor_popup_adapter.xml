<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:minHeight="55dp"
    android:weightSum="6"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tvVendorPopUpDate"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/tableborder"
        android:gravity="center"
        android:padding="5dp"
        android:text="121324534"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/tvVendorPopUpPoNum"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/tableborder"
        android:gravity="center"
        android:padding="5dp"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/tvVendorPopUpInvoice"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/tableborder"
        android:gravity="center"
        android:padding="5dp"
        android:textSize="10sp" />


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:background="@drawable/tableborder"
        android:gravity="center|right"
        android:orientation="vertical"
        android:padding="5dp"
        android:textSize="10sp">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TableRow>

                <TextView
                    android:padding="3dip"
                    android:text="Bill :"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/tablerowVendorPopUp1"
                    android:gravity="left"
                    android:padding="3dip"
                    android:text="test2"
                    android:textSize="10sp" />
            </TableRow>

            <TableRow>

                <TextView

                    android:padding="3dip"
                    android:text="Paid :"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/tablerowVendorPopUp2"
                    android:gravity="left"
                    android:padding="3dip"
                    android:text="test4"
                    android:textSize="10sp" />
            </TableRow>

            <TableRow>

                <TextView
                    android:padding="3dip"
                    android:text="Balance :"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/tablerowVendorPopUp3"
                    android:gravity="left"
                    android:padding="3dip"
                    android:text="test4"
                    android:textSize="10sp" />
            </TableRow>
        </TableLayout>
    </LinearLayout>
</LinearLayout>