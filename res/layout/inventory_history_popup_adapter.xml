<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="1dp"
    android:weightSum="6"
    android:background="@drawable/tableborder"
    android:minHeight="55dp">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_weight="1"
        android:background="@drawable/edit_text_background"
        android:orientation="vertical"
        android:padding="2dp">

        <TextView
            android:id="@+id/tvInventoryHistoryDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="2dp"
            android:text="Date"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvInventoryHistoryMonth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="2dp"
            android:textSize="12sp"
            android:text="Date" />
    </LinearLayout>

    <TextView
        android:id="@+id/tvInventoryHistoryAdded"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text="Added"
        android:layout_gravity="center"
        android:paddingLeft="4dp"
        android:textSize="12sp"
        android:gravity="center" />

    <TextView
        android:id="@+id/tvInventoryHistoryBalance"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text="Balance"
        android:layout_gravity="center"
        android:paddingLeft="2dp"
        android:textSize="12sp"
        android:gravity="center" />
    <TextView
        android:id="@+id/tvInventoryHistoryType"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text="Type"
        android:layout_gravity="center"
        android:paddingLeft="2dp"
        android:textSize="12sp"
        android:gravity="center" />
    <TextView
        android:id="@+id/tvInventoryHistoryRemarks"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:text="Remarks"
        android:maxLength="25"
        android:layout_gravity="center"
        android:paddingLeft="2dp"
        android:textSize="12sp"
        android:gravity="center" />

</LinearLayout>