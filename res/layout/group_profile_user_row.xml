<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
      android:paddingTop="5dp"
     android:paddingBottom="5dp"
     android:padding="10dp"
    android:orientation="vertical" >
    
    <LinearLayout 
        android:id="@+id/mTopLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="5"
        >
        
        <LinearLayout 
            android:layout_width="wrap_content"
            android:layout_weight="4.2"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <FrameLayout 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >
         
               <sms19.inapp.msg.CircularImageView
                android:id="@+id/rc_userpic"
                android:layout_width="50dip"
                android:layout_height="50dip"
                android:layout_centerInParent="true"
                android:scaleType="centerCrop"
                android:background="@drawable/profileimg" />

                <ImageView
                    android:id="@+id/onlineimage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="5dp"
                    
                    android:src="@drawable/offline" />
            
            </FrameLayout>
            
            <RelativeLayout 
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:layout_marginLeft="10dp"
                >
                <TextView 
                    android:id="@+id/name"
                    android:text="Advanture"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/phone_number"
                    android:textStyle="bold"
                    android:textSize="12sp"
                    android:textColor="@android:color/black"
                    />
                
                 <TextView 
                    android:id="@+id/phone_number"
                    android:text=""
                    android:textSize="12sp"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/black"
                    />
                
                <TextView 
                    android:id="@+id/msg"
                    android:text="status"
                     android:textSize="12sp"
                    android:layout_below="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/chat_action_bar_bg"
                    />
            </RelativeLayout>
            
            
        </LinearLayout>
        
         <LinearLayout 
             android:id="@+id/delete_layout"
            android:layout_width="wrap_content"
            android:layout_weight=".80"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="visible"
            android:gravity="right|center_vertical"
             android:layout_marginRight="5dp"
             android:layout_marginLeft="5dp"
            android:layout_gravity="center_vertical"
            >
            <ImageView 
                android:id="@+id/delete_group1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/delete_gray"
                android:padding="3dp"
               
                />
            </LinearLayout>
      
        
    </LinearLayout>
    

</LinearLayout>
