<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="sms19.listview.newproject.MerchatStorePackage.Fragments.UserProductListFragment">

    <LinearLayout
        android:id="@+id/search_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/select_cart"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:weightSum="4">

        <RelativeLayout
            android:id="@+id/type_spinner"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_marginLeft="5dp"
            android:layout_weight="2">

            <Spinner
                android:id="@+id/spinnerUserProductListType"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_marginLeft="5dp"
                android:gravity="center_vertical"
                android:paddingRight="20dp"
                android:spinnerMode="dropdown" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/search_box"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2">

            <EditText
                android:id="@+id/etUserProductListSearch"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"
                android:gravity="center_vertical"
                android:hint="Search"
                android:maxLength="@integer/edit_view_length"
                android:paddingBottom="6dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/advance_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:src="@drawable/searchadvance"
            android:visibility="gone" />
    </LinearLayout>



    <View
        android:id="@+id/separator"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/header_layout"
        android:background="@color/list_divider_color" />

    <RelativeLayout
        android:id="@+id/selected_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:padding="5dp">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerUserProductList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:layout_below="@+id/separator"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="5dp"
            android:background="@color/listview_background"
            android:descendantFocusability="afterDescendants"
            android:divider="@null"
            android:dividerHeight="5dp"
            android:clipToPadding="false"
            android:paddingBottom="30dp" />

    </RelativeLayout>
</LinearLayout>
