<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/border_black"
    android:elevation="5dp"
    android:gravity="center"
    android:minHeight="50dp"
    android:orientation="horizontal"
    android:padding="5dp"
    android:focusable="false"
    android:id="@+id/customer_adapter_layout"
    android:weightSum="5">


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="1dp"
        android:layout_weight="1"
        android:focusable="false"
        android:orientation="vertical">

        <com.kitever.app.context.CircleImageView
            android:id="@+id/pos_customer_profile"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:focusable="false"
            android:layout_gravity="center_vertical|center_horizontal"
            android:src="@drawable/no_image" />

        <TextView
            android:id="@+id/pos_customer_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:gravity="center"
            android:text="Name"
            android:focusable="false"
            android:textAlignment="center"
            android:textSize="12sp" />

    </LinearLayout>

    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|center_vertical"
        android:focusable="false"
        android:layout_weight="1">

        <TextView
            android:id="@+id/pos_customer_order"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_margin="1dp"
            android:gravity="center"
            android:text="Order"
            android:focusable="false"
            android:textAlignment="center"
            android:textSize="12sp" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|center_vertical"
        android:focusable="false"
        android:layout_weight="1">

        <TextView
            android:id="@+id/pos_customer_business"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:text="Business"
            android:focusable="false"
            android:textSize="12sp" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|center_vertical"
        android:focusable="false"
        android:layout_weight="1">

        <TextView
            android:id="@+id/pos_customer_credit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="1dp"
            android:gravity="center"
            android:text="Credit"
            android:focusable="false"
            android:textSize="12sp" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|center_vertical"
        android:focusable="false"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:background="@drawable/edit_text_background"
            android:orientation="vertical"
            android:focusable="false"
            android:padding="2dp">

            <TextView
                android:id="@+id/pos_customer_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="2dp"
                android:text="Date"
                android:focusable="false"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/pos_customer_month"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="2dp"
                android:focusable="false"
                android:text="Month" />
        </LinearLayout>
    </FrameLayout>
</LinearLayout>
