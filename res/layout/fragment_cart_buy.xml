<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA"
    tools:context="sms19.listview.newproject.MerchatStorePackage.Fragments.CartBuyFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/btnCartBuy">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:orientation="vertical"
            android:padding="4dp">

            <TextView
                android:id="@+id/tvLabelCartBuyName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:layout_marginTop="2dp"
                android:background="@drawable/textview_top"
                android:elevation="2dp"
                android:gravity="start"
                android:minHeight="15dp"
                android:paddingBottom="2dp"
                android:paddingLeft="8dp"
                android:paddingTop="4dp"
                android:text=""
                android:textSize="8sp"
                android:visibility="visible" />

            <EditText
                android:id="@+id/etCartBuyName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="2dp"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:background="@drawable/textview_bottom"
                android:elevation="2dp"
                android:gravity="start"
                android:hint="Names *"
                android:maxLength="@integer/edit_view_length"
                android:minHeight="30dp"
                android:imeOptions="actionNext"
                android:paddingBottom="2dp"
                android:paddingLeft="10dp"
                android:paddingTop="2dp"
                android:stretchColumns="5"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tvLabelCartBuyEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:layout_marginTop="2dp"
                android:background="@drawable/textview_top"
                android:elevation="2dp"
                android:gravity="start"
                android:minHeight="15dp"
                android:paddingBottom="4dp"
                android:paddingLeft="8dp"
                android:paddingTop="2dp"
                android:text=""
                android:textSize="8sp"
                android:visibility="visible" />

            <EditText
                android:id="@+id/etCartBuyEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="2dp"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:background="@drawable/textview_bottom"
                android:elevation="2dp"
                android:gravity="start"
                android:hint="Email"
                android:maxLength="@integer/edit_view_length"
                android:minHeight="30dp"
                android:paddingBottom="4dp"
                android:paddingLeft="10dp"
                android:imeOptions="actionNext"
                android:paddingTop="2dp"
                android:stretchColumns="5"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tvLabelCartBuyMobile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:layout_marginTop="2dp"
                android:background="@drawable/textview_top"
                android:elevation="2dp"
                android:gravity="start"
                android:minHeight="15dp"
                android:paddingBottom="2dp"
                android:paddingLeft="8dp"
                android:paddingTop="4dp"
                android:text=""
                android:textSize="8sp"
                android:visibility="visible" />

            <EditText
                android:id="@+id/etCartBuyMobile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="2dp"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:background="@drawable/textview_bottom"
                android:elevation="2dp"
                android:gravity="start"
                android:hint="Mobile *"
                android:imeOptions="actionNext"
                android:maxLength="@integer/edit_view_length"
                android:minHeight="30dp"
                android:paddingBottom="4dp"
                android:paddingLeft="10dp"
                android:paddingTop="2dp"
                android:stretchColumns="5"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tvLabelCartBuyState"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:layout_marginTop="2dp"
                android:background="@drawable/textview_top"
                android:elevation="2dp"
                android:gravity="start"
                android:minHeight="15dp"
                android:paddingBottom="2dp"
                android:paddingLeft="8dp"
                android:paddingTop="4dp"
                android:text=""
                android:textSize="8sp"
                android:visibility="visible" />

            <EditText
                android:id="@+id/etCartBuyState"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="2dp"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:background="@drawable/textview_bottom"
                android:elevation="2dp"
                android:gravity="start"
                android:hint="State *"
                android:imeOptions="actionNext"
                android:maxLength="@integer/edit_view_length"
                android:minHeight="30dp"
                android:paddingBottom="4dp"
                android:paddingLeft="10dp"
                android:paddingTop="2dp"
                android:stretchColumns="5"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tvLabelCartBuyCity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:layout_marginTop="2dp"
                android:background="@drawable/textview_top"
                android:elevation="2dp"
                android:gravity="start"
                android:minHeight="15dp"
                android:paddingBottom="2dp"
                android:paddingLeft="8dp"
                android:paddingTop="4dp"
                android:text=""
                android:textSize="8sp"
                android:visibility="visible" />

            <EditText
                android:id="@+id/etCartBuyCity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="2dp"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:background="@drawable/textview_bottom"
                android:elevation="2dp"
                android:gravity="start"
                android:hint="City *"
                android:imeOptions="actionNext"
                android:maxLength="@integer/edit_view_length"
                android:minHeight="30dp"
                android:paddingBottom="4dp"
                android:paddingLeft="10dp"
                android:paddingTop="2dp"
                android:stretchColumns="5"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tvLabelCartBuyAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:layout_marginTop="2dp"
                android:background="@drawable/textview_top"
                android:elevation="2dp"
                android:gravity="start"
                android:minHeight="15dp"
                android:paddingBottom="2dp"
                android:paddingLeft="8dp"
                android:paddingTop="4dp"
                android:text=""
                android:textSize="8sp"
                android:visibility="visible" />

            <EditText
                android:id="@+id/etCartBuyAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="2dp"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:background="@drawable/textview_bottom"
                android:elevation="2dp"
                android:imeOptions="actionNext"
                android:gravity="start"
                android:hint="Address *"
                android:maxLength="@integer/edit_view_length"
                android:minHeight="30dp"
                android:paddingBottom="4dp"
                android:paddingLeft="10dp"
                android:paddingTop="2dp"
                android:stretchColumns="5"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tvLabelCartBuyRemarks"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:layout_marginTop="2dp"
                android:background="@drawable/textview_top"
                android:elevation="2dp"
                android:gravity="start"
                android:minHeight="15dp"
                android:paddingBottom="2dp"
                android:paddingLeft="8dp"
                android:paddingTop="4dp"
                android:text=""
                android:textSize="8sp"
                android:visibility="visible" />

            <EditText
                android:id="@+id/etCartBuyRemarks"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:background="@drawable/textview_bottom"
                android:elevation="2dp"
                android:gravity="start"
                android:imeOptions="actionDone"
                android:hint="Remarks *"
                android:maxLength="@integer/edit_view_length"
                android:minHeight="30dp"
                android:paddingBottom="4dp"
                android:paddingLeft="10dp"
                android:paddingTop="2dp"
                android:stretchColumns="5"
                android:textSize="12sp" />
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/btnCartBuy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/actionbar_background"
        android:minHeight="50dp"
        android:text="Place Order"
        android:textColor="@color/white" />
</RelativeLayout>
