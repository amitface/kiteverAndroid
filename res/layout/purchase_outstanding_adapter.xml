<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:minHeight="55dp"
    android:orientation="horizontal"
    android:padding="1dp"
    android:weightSum="6">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/edit_text_background"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="2dp">

        <TextView
            android:id="@+id/tvPurchaseOutStandingDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="2dp"
            android:text="Date"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvPurchaseOutStandingMonth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="2dp"
            android:text="Date"
            android:textSize="12sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/tvPurchaseOutStandingVendor"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:gravity="center"
        android:paddingLeft="2dp"
        android:text="Vendor"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tvPurchaseOutStandingPoNum"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:gravity="center"
        android:paddingLeft="4dp"
        android:text="Name"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tvPurchaseOutStandingInvoice"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:gravity="center"
        android:paddingLeft="2dp"
        android:text="Invoice"
        android:textSize="12sp" />


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="2"
        android:gravity="right"
        android:orientation="vertical"
        android:paddingLeft="2dp">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TableRow android:gravity="left">

                <TextView
                    android:id="@+id/tvPurchaseOutStandingLabelBill"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bill"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" : "
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tvPurchaseOutStandingBill"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="00"
                    android:textSize="12sp" />
            </TableRow>

            <TableRow android:gravity="left">

                <TextView
                    android:id="@+id/tvPurchaseOutStandingLabelBalance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Balance"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" : "
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tvPurchaseOutStandingBalance"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="000"
                    android:textSize="12sp" />
            </TableRow>
        </TableLayout>
    </LinearLayout>
</LinearLayout>