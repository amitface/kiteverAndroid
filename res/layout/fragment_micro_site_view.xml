<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1"
    tools:context="sms19.listview.newproject.fragment.MicroSiteView">

    <!-- TODO: Update blank fragment layout -->

    <ProgressBar
        android:id="@+id/progressbarMicroSiteView"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_below="@+id/separator_below"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:visibility="gone"
        android:indeterminate="true" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".1">

        <TextView
            android:id="@+id/tvSiteVisits"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/tvSiteLeads"
            android:layout_centerVertical="true"
            android:layout_margin="2dp"
            android:padding="5dp" />

        <TextView
            android:id="@+id/tvSiteLeads"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_margin="2dp"
            android:gravity="center"
            android:padding="5dp" />
    </RelativeLayout>
    <Button
        android:id="@+id/btnCreateMicroSiteButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:text="CREATE MICROSITE"/>

    <WebView
        android:id="@+id/webviewMicroSiteView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".9" />
</LinearLayout>
