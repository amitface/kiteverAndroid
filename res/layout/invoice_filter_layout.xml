<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

  <LinearLayout     		
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="vertical"	        
	        android:paddingTop="10dp"	        
      >
      <TableLayout 
          android:layout_width="match_parent"
    	  android:layout_height="match_parent"
    	  android:stretchColumns="*">
          <TableRow 
          >
	       <TextView
	            android:id="@+id/invoice_start_date"     		
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:gravity="end"
		        android:layout_gravity="center_vertical"
		        android:text="Start Date -:"	      	        
		        android:padding="5dp"/>
	       <FrameLayout 
	           >
	       <TextView     		
	            android:id="@+id/invoice_date"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"		        
		        android:layout_margin="2dp"
		        android:layout_gravity="center_vertical"
		        android:padding="5dp"
		        android:gravity="start"
		        android:background="@drawable/template_round_stoke"
		        android:text="DD/MM/YYYY"
		        />   
		        </FrameLayout>
      </TableRow>
      
      <TableRow >
	       <TextView
	            android:id="@+id/invoice_end_date_lable"     		
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:gravity="end"
		        android:layout_gravity="center_vertical"
		        android:text="End Date -:"	      	        
		        android:padding="5dp"/>
	       <FrameLayout 
	           >
	       <TextView     		
	            android:id="@+id/invoice_end_date"  
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"		        
		        android:layout_margin="2dp"
		        android:padding="5dp"
		        android:gravity="start"
		        android:background="@drawable/template_round_stoke"
		        android:layout_gravity="center_vertical"
		         android:text="DD/MM/YYYY"
		        />   
		        </FrameLayout>
      </TableRow>      
      </TableLayout>
      
       
  </LinearLayout>
    <Button
        android:id="@+id/invoice_done_btn"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:background="@color/color_primary"
        android:text="Done"
        android:textColor="#FFF" />
</RelativeLayout>