<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="4dp" >

    <TextView
        android:id="@+id/temp_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textable_layout"
        android:layout_marginBottom="5dp"
        android:background="@drawable/template_round_stoke"
        android:padding="10dp"
        android:text="TextView"
        android:textColor="#000000"
        android:textSize="17sp"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/textable_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="70dp"
        android:layout_centerVertical="true"
        android:background="@drawable/tableborder"
        android:elevation="2dp"
        android:gravity="right"
        android:orientation="vertical"
        android:weightSum="1">

        <LinearLayout
            android:id="@+id/all_btn_layout"
            android:layout_width="wrap_content"
            android:layout_weight=".1"
            android:layout_height="0dp"
            android:gravity="center_vertical|right"
            android:layout_alignParentRight="true"
            android:visibility="gone" >

            <TextView
                android:id="@+id/edit_btn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:minWidth="25dp"
                android:padding="4dp"
                android:layout_margin="2dp"
                android:gravity="center"
                android:textSize="16sp"
                android:text="@string/edit_pen"
              />

            <TextView
                android:id="@+id/delete_btn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:minWidth="25dp"
                android:gravity="center"
                android:padding="4dp"
                android:textSize="16sp"
                android:text="@string/delete_moon"
                 />
        </LinearLayout>

        <TextView
            android:id="@+id/templatesubpagemsg"
            android:layout_width="match_parent"
            android:layout_weight=".9"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:padding="2dp"

            android:text="TextView1"

            android:layout_margin="2dp"
            android:textSize="18sp"
            android:layout_toLeftOf="@+id/all_btn_layout"
            android:visibility="visible" />


    </LinearLayout>

</RelativeLayout>


