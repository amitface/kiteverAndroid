<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   
   android:background="@drawable/school"
    tools:context="sms19.listview.newproject.EditProfile" >
<LinearLayout
    android:id="@+id/linear1"
    android:orientation="vertical"
      android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <ImageView
        android:id="@+id/imgViewProfile"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:src="@drawable/profile_pic" />

   <Button
       android:id="@+id/btnbrowser"
        android:gravity="center"
        android:layout_marginTop="4dp"
       android:layout_width="wrap_content"
       android:layout_height="28dp"
       android:background="@drawable/backgroundbtn"
      android:text="Browse"
      android:textColor="#FFFFFF"
       android:layout_gravity="center"
     />

   </LinearLayout>
   

    <ScrollView
        android:id="@+id/scrollView1"
      
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       android:layout_below="@+id/linear1">
       

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:padding="7dp"
        android:layout_marginTop="5dp"
     
        android:orientation="vertical" >

        <TableRow
            android:id="@+id/tablerow1"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
              android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/textName"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="Name:"
                android:padding="3dp"
                android:textSize="15sp"
                android:layout_gravity="center"
                android:textColor="#000000" />

            <EditText
                android:id="@+id/editName"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/neweditprofile"
                android:ems="10"
                android:padding="3dp"
                android:layout_weight="1"
                android:gravity="center"
                android:inputType="textPersonName" />
            
            
            
            
            
            
        </TableRow>

        <TableRow
            android:id="@+id/tablerow2"
              android:layout_gravity="center"
                 android:layout_marginBottom="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/textMobile"
                android:layout_width="80dp"
                android:padding="3dp"
                android:textSize="15sp"
                  android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:text="Mobile:"
                android:textColor="#000000" />

            <EditText
                android:id="@+id/editMobile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/neweditprofile"
                android:ems="10"
            
                android:text=""
                android:padding="3dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="10" />
        </TableRow>

        <TableRow
            android:id="@+id/tablerow3"
               android:layout_marginBottom="5dp"
              android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/textEmail"
                android:padding="3dp"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="Email:"
                  android:textSize="15sp"
                android:textColor="#000000" />

            <EditText
                android:id="@+id/editEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                 android:padding="3dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@drawable/neweditprofile"
                android:ems="10"
                android:gravity="center"
                android:inputType="textEmailAddress" />

        </TableRow>

        <TableRow
            android:id="@+id/tablerow4"
               android:layout_marginBottom="5dp"
              android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/textPinCode"
                android:layout_width="80dp"
                android:padding="3dp"
                
                  android:textSize="15sp"
                  android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:text="PIN:"
                android:textColor="#000000" />

            <EditText
                android:id="@+id/editPinCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/neweditprofile"
                android:ems="10"
                   android:padding="3dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="6" />
        </TableRow>

        <TableRow
            android:id="@+id/tablerow5"
            android:layout_width="wrap_content"
           android:layout_gravity="center"
              android:layout_marginBottom="5dp"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/merchat"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
             android:textSize="15sp"
                android:padding="3dp"
                android:text="Mert.Code"
                android:textColor="#000000" />

            <EditText
                android:id="@+id/merchantcode"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
               android:layout_gravity="center"
                android:background="@drawable/neweditprofile"
                   android:padding="3dp"
                  android:gravity="center"
                  android:editable="false"
                  android:focusable="false"
                android:ems="10" >

                <requestFocus />
            </EditText>

        </TableRow>

        <TableRow
            android:id="@+id/tablerow6"
            android:layout_width="wrap_content"
          android:layout_gravity="center"
             android:layout_marginBottom="5dp"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/website"
                android:layout_width="80dp"
                android:padding="3dp"
                  android:textSize="15sp"
                  android:layout_gravity="center"
                android:layout_height="wrap_content"
                 android:textColor="#000000"
            
                android:text="Website" />

            <EditText
                android:id="@+id/websiteaddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                 android:padding="3dp"
                  android:layout_weight="1"
                 android:background="@drawable/neweditprofile"
                android:layout_gravity="center"
                      android:editable="false"
                  android:focusable="false"
               android:gravity="center"
                android:ems="10" />
          </TableRow>
           <TableRow
            android:id="@+id/tablerow9"
            android:layout_width="wrap_content"
             android:layout_gravity="center"
                android:layout_marginBottom="5dp"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/DOB"
                android:layout_width="80dp"
                android:padding="3dp"
                  android:textSize="15sp"
                android:layout_height="wrap_content"
                 android:textColor="#000000"
                 android:layout_gravity="center"
                android:text="D.O.B" />

            <EditText
                android:id="@+id/dob"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                   android:padding="3dp"
                android:background="@drawable/neweditprofile"
                android:gravity="center"
                android:ems="10" />
        </TableRow>

           <CheckBox
               android:id="@+id/promptme"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginLeft="40dp"
               android:paddingLeft="15dp"
               android:text="Prompt me before sending sms"
               android:textColor="#000000"
               android:textSize="12sp"
               android:textStyle="bold" />

           <Button
               android:id="@+id/btnSubmit"
               android:layout_width="match_parent"
               android:layout_height="31dp"
               android:layout_marginBottom="18dp"
               android:layout_marginTop="20dp"
               android:background="@drawable/backgroundbtn"
               android:text=" Update "
               android:textColor="#ffffff" />
        
        <TableRow
            android:id="@+id/tablerow7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
          android:layout_marginTop="15dp"
          >
        </TableRow>

    </LinearLayout>
</ScrollView>


</RelativeLayout>