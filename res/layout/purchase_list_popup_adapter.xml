                <TextView
                    android:id="@+id/tablerowPurchasePopUp2"
                    android:gravity="left"
                    android:padding="3dip"
                    android:text="test4"
                    android:textSize="10sp" />
            </TableRow>

            <TableRow>

                <TextView
                    android:padding="3dip"
                    android:text="Balance :"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/tablerowPurchasePopUp3"
                    android:gravity="left"
                    android:padding="3dip"
