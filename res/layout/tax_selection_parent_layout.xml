        android:layout_height="wrap_content"
        android:layout_below="@+id/tax_list_view"
        android:layout_alignParentLeft="true"
        android:layout_margin="10dp"
        android:background="#01A89E"
        android:text="Done"
        android:textColor="#FFF" />

-->


</RelativeLayout>