<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
  
    android:background="@drawable/school"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

 

    <TableRow
        android:id="@+id/tableRow1"
        android:layout_width="match_parent"
          android:layout_gravity="center"
          android:gravity="center"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp" >

        <Button
            android:id="@+id/todayrept"
            android:layout_width="100dp"
            android:layout_height="100dp"
          android:background="@drawable/sad"
          android:textStyle="bold"
           android:textColor="#000000"
            android:textSize="12dp"
          />
    </TableRow>

   <TextView
       android:id="@+id/textView8"
       android:layout_width="fill_parent"
       android:layout_height="2dp"
       android:layout_marginTop="20dp"
       android:background="@drawable/badge" />
         
    <TableRow
        android:id="@+id/tableRow3"
        android:layout_width="wrap_content"
           android:layout_marginTop="20dp"
            android:gravity="center"
             android:layout_gravity="center"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/oneday"
            android:layout_width="100dp"
            android:layout_height="100dp"
             android:layout_marginLeft="5dp"
            android:background="@drawable/sad"
            android:textColor="#000000"
            android:textSize="12dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/twoday"
            android:layout_width="100dp"
            android:layout_marginLeft="5dp"
            android:layout_height="100dp"
            android:background="@drawable/sad"
            android:textColor="#000000"
            android:textSize="12dp"
            android:textStyle="bold" />

   <Button
            android:id="@+id/threeday"
            android:layout_width="100dp"
             android:layout_marginLeft="5dp"
            android:layout_height="100dp"
              android:textColor="#000000"
              android:textStyle="bold"
              android:background="@drawable/sad"
            android:textSize="12dp"/>
    </TableRow>
<TableRow
        android:id="@+id/tableRow4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
   
        <TextView 
        android:id="@+id/textView4"   
        android:text="Three_Day_Report" 
        android:textColor="#000000"
          android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

        
       
         </TableRow>
    <TableRow
        android:id="@+id/tableRow5"
          android:layout_marginTop="18dp"
        android:layout_width="match_parent"
          android:layout_gravity="center"
           android:gravity="center"
        android:layout_height="wrap_content" >

       

        

        <Button
            android:id="@+id/fourday"
            android:layout_width="100dp"
            android:layout_height="100dp"
             android:textStyle="bold"
              android:layout_marginLeft="5dp"
            android:textColor="#000000"
              android:background="@drawable/sad"
          android:textSize="12dp" />
<Button
            android:id="@+id/fiveday"
            android:layout_width="100dp"
             android:layout_marginLeft="5dp"
            android:layout_height="100dp"
             android:textStyle="bold"
            android:textColor="#000000"
              android:background="@drawable/sad"
          android:textSize="12dp" />
 <Button
            android:id="@+id/sixday"
            android:layout_width="100dp"
            android:layout_height="100dp"
             android:textStyle="bold"
              android:layout_marginLeft="5dp"
            android:textColor="#000000"
              android:background="@drawable/sad"
          android:textSize="12dp" />
    </TableRow>

    <TextView
       android:id="@+id/textView1"
       android:layout_width="fill_parent"
       android:layout_height="2dp"
       android:layout_marginTop="23dp"
       android:background="@drawable/badge" />

</LinearLayout>
