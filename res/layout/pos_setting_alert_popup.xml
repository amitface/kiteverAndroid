<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dip"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#006955"
        android:id="@+id/invoice_popup_layout"
        android:padding="5dp">

        <TextView
            android:id="@+id/invoice_msg_type"
            style="@style/Icon_Style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="5dp"
            android:gravity="center"
            android:padding="5dp"
            android:text="@string/clock_icon" />


        <TextView
            android:id="@+id/invoice_done"
            style="@style/Icon_Style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:padding="5dp"
            android:text="@string/check_icon" />

    </RelativeLayout>


    <LinearLayout
        android:id="@+id/smslayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical"
        android:padding="5dp">

        <Switch
            android:id="@+id/InvoiceSettingSwitch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enable" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:weightSum="6">


            <Spinner
                android:id="@+id/temlate_spinner"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4" />

            <ImageView
                android:id="@+id/preview"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_marginRight="5dp"
                android:layout_weight="2"
                android:gravity="center_vertical"
                android:padding="2dp"
                android:src="@drawable/ic_template_sms" />
        </LinearLayout>

        <Spinner
            android:id="@+id/send_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:entries="@array/Send_type_Array" />


        <LinearLayout
            android:id="@+id/send_after_lyt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:weightSum="6">

            <EditText
                android:id="@+id/total_delay"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="2"
                android:background="#fff"
                android:ems="10"
                android:gravity="center"
                android:hint="0"
                android:inputType="number"
                android:maxLength="3"
                android:paddingLeft="5dp" />

            <Spinner
                android:id="@+id/delay_type"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_weight="4"
                android:entries="@array/delayarray"
                android:padding="2dp" />
        </LinearLayout>


    </LinearLayout>

</LinearLayout>
