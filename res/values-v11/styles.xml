<resources>

    <!--
        Base application theme for API 11+. This theme completely replaces
        AppBaseTheme from res/values/styles.xml on API 11+ devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light">
        <!-- API 11 theme customizations can go here. -->
        
       <!--   <item name="android:background">@color/actionbar_background_2</item> -->
          <item name="android:divider">@null</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:actionModeBackground">@color/chat_action_bar_bg</item>
         <item name="windowActionModeOverlay">true</item>
          <item name="actionModeStyle">@style/AppThemeNew</item>
        <item name="android:background">@android:color/transparent</item>
       
    </style>
  <style name="AppThemeNew" parent="android:Theme.Holo">
<item name="android:actionModeBackground">@android:color/white</item>
</style>
</resources>
