<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.


    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light">

        <item name="android:divider">@null</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="actionModeStyle">@style/AppThemeNew</item>
        <item name="android:actionModeBackground">@color/chat_action_bar_bg</item>
    </style>


    <style name="CustomDialogTheme" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="AppThemeNew" parent="android:Theme.Holo">
        <item name="android:actionModeBackground">@android:color/white</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowEnterAnimation">@anim/anim</item>
    </style>

    <style name="Custom" parent="Theme.AppCompat.Light">

        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.

        -->
        <!-- <item name="android:background">@color/actionbar_background_2</item> -->
        <item name="background">@color/chat_action_bar_bg</item>
        <item name="android:divider">@null</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:background">@color/chat_action_bar_bg</item>
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <item name="background">@color/actionbar_background</item>
        <item name="contentInsetStart">0dp</item>
        <item name="contentInsetEnd">0dp</item>
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <!-- Design for Home Page -->
    <style name="HomeDesign" parent="Theme.AppCompat.Light">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:drawablePadding">2dp</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="CustomProgressBar" parent="android:Widget.ProgressBar.Horizontal">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/custom_progress_bar</item>
        <item name="android:minHeight">4dip</item>
        <item name="android:maxHeight">6dip</item>
    </style>

    <style name="CustomSeekBar" parent="android:Widget.SeekBar">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/seekbar_progress</item>
        <item name="android:indeterminateDrawable">@drawable/seekbar_progress</item>
        <item name="android:minHeight">3dip</item>
        <item name="android:maxHeight">5dip</item>
        <item name="android:thumb">@drawable/thumbs</item>
        <item name="android:thumbOffset">4dip</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="PagerTabStripText">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="Mail_Icon_Style">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#808080</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:text">&#xe91c;</item>
    </style>

    <style name="Sms_Icon_Style">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#808080</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:text">&#xe90d;</item>
    </style>

    <style name="Icon_Style">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="TwoWayView">
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="AppBaseTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="OrderScreen">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">10dp</item>

    </style>

    <style name="OrderScreenLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/border_black</item>
        <item name="android:elevation">5dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
    </style>

    <style name="CounterBoxStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <!--  <item name="android:background">@drawable/counterbox</item> -->
        <item name="android:textColor">@color/listview_font_color</item>-->
        <item name="android:textSize">12sp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_alignParentRight">true</item>

    </style>

    <style name="customspinner_style">
        <item name="android:background">@drawable/gradient_spinner</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>


    </style>

    <style name="AppBaseTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppBaseTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


