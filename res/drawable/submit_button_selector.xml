<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- PRESSED -->
    <item android:state_pressed="true"><shape android:shape="rectangle">
            <corners android:radius="0dp" />

            <gradient android:angle="90" android:centerColor="#31A4F3" android:centerX="35%" android:endColor="#31A4F3" android:startColor="#64bbf6" android:type="linear" />

            <padding android:bottom="0dp" android:left="0dp" android:right="0dp" android:top="0dp" />
        </shape></item>

    <!-- FOCUSED -->
    <item android:state_focused="true"><shape android:shape="rectangle">
            <corners android:radius="0dp" />

            <gradient android:angle="90" android:centerColor="#31A4F3" android:centerX="35%" android:endColor="#31A4F3" android:startColor="#64bbf6" android:type="linear" />

            <padding android:bottom="0dp" android:left="0dp" android:right="0dp" android:top="0dp" />
        </shape></item>

    <!-- BUTTON -->
    <item><layer-list>

            <!-- MAIN -->
            <item android:bottom="2dp"><shape android:shape="rectangle">
                    <corners android:radius="0dp" />

                    <gradient android:angle="90" android:centerColor="#fff" android:centerX="35%" android:endColor="#fff" android:startColor="#fff" android:type="linear" />

                    <padding android:bottom="0dp" android:left="0dp" android:right="0dp" android:top="0dp" />
                </shape></item>
        </layer-list></item>

</selector>